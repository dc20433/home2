      <%= form_with(model: user) do |f| %>

        <div class='form-group'>
          <div class='row mb-3'>
            <div class='col-2'>
             <b><%= f.label :email, class:'pt-2' %></b>
            </div>
            <div class='col-10'>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control border-primary' %>
            </div>
        </div>

        <div class='form-group'>
          <div class='row mb-3'>
            <div class='col-2'>
             <b><%= f.label :role, class:'form-label' %></b>
            </div>
            <div class='col-10'>
              <%= f.select :role, User::USER_ROLE, class:'form-control border-primary' %>
            </div>
        </div>

        <div class="btn-group" role="group"> 
          <%= f.submit "Submit", class:'btn btn-sm btn-primary rounded-pill px-3 m-2 fw-bold' %>
      <% end %>
        <%= button_to "Delete", @user, method: :delete, class:"btn btn-sm btn-danger rounded-pill px-3 m-2 fw-bold" %>
        <%= link_to "Return", users_path, class:"btn btn-sm btn-success rounded-pill px-3 m-2 fw-bold" %>
        </div>
    </div>
